@model List<News>
@section CSS{
    <link rel="stylesheet" href="~/css/News.css" />
}
<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            @for (int i = 0; i < Model.Count(); i++)
            {
            <div class="post-preview">
                <a href="@Url.Action("Details","Articles", new { id = Model[i].Id})">
                    <h2 class="post-title">
                        @(Model[i].Type==0 ? Model[i].Header.ToUpper() : Model[i].Header)                        
                    </h2>
                    <h3 class="post-subtitle">
                        @Model[i].Header
                    </h3>
                </a>
                <p class="post-meta">
                    @if (Model[i].Type == 0)
                    {
                        <text>Na poważnie</text>
                    }
                    else
                    {
                        <text>Z żartem :)</text>
                    }
                </p>
                    
            </div>
            <hr>
            }
        </div>
    </div>
</div>

<hr>
@section scripts{
    <script type="text/javascript" src="~/js/News.js" asp-append-version="true"></script>
}